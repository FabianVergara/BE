<Window x:Class="Vista.Actualizar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vista"
        mc:Ignorable="d"
        Title="Seguros BeLife" Height="300" Width="300">
    <Grid>
        <GroupBox x:Name="groupBox" Header="Actualizar Cliente" Margin="0,10,0,0">
            <Grid Margin="0,0,-2,-12" Background="#FFF7F702">
                <Label x:Name="label" Content="Rut:" HorizontalAlignment="Left" Margin="10,24,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
                <Label x:Name="label1" Content="Nombre:" HorizontalAlignment="Left" Margin="10,55,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
                <Label x:Name="label2" Content="Apellidos:" HorizontalAlignment="Left" Margin="10,86,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
                <Label x:Name="label3" Content="Fecha Nacimiento:" HorizontalAlignment="Left" Margin="10,117,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
                <Label x:Name="label4" Content="Sexo:" HorizontalAlignment="Left" Margin="10,148,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
                <Label x:Name="label5" Content="Estado Civil:" HorizontalAlignment="Left" Margin="10,179,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
                <Button x:Name="btn_volver" Content="Volver" HorizontalAlignment="Left" Margin="26,218,0,0" VerticalAlignment="Top" Width="75"/>
                <Button x:Name="btn_actualizar" Content="Actualizar" HorizontalAlignment="Left" Margin="188,218,0,0" VerticalAlignment="Top" Width="75"/>
                <TextBox x:Name="txt_rut" HorizontalAlignment="Left" Height="23" Margin="91,24,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                <TextBox x:Name="txt_nombre" HorizontalAlignment="Left" Height="23" Margin="91,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                <TextBox x:Name="txt_apellido" HorizontalAlignment="Left" Height="23" Margin="91,86,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                <DatePicker x:Name="dpkFechaN" HorizontalAlignment="Left" Margin="129,119,0,0" VerticalAlignment="Top"/>
                <ComboBox x:Name="cbo_sexo" HorizontalAlignment="Left" Margin="91,152,0,0" VerticalAlignment="Top" Width="120"/>
                <ComboBox x:Name="cbo_ECivil" HorizontalAlignment="Left" Margin="93,183,0,0" VerticalAlignment="Top" Width="120"/>
            </Grid>
        </GroupBox>

    </Grid>
</Window>
